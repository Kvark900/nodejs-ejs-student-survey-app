<div class="modal"
     id="answerModal"
     tabindex="-1"
     role="dialog"
     aria-labelledby="answerModalLabel"
     aria-hidden="true">
	<div class="modal-dialog"
	     role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title"
				    id="answerModalLabel">Answer question</h5>
				<button type="button"
				        class="close"
				        data-dismiss="modal"
				        aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<span id="invalidFormMsg"
				      style="display:none;">Please enter your answer </span>
				<div class="form-group row">
					<label for="questionText"
					       class="col-sm-2 col-form-label">Question:
					</label>
					<div class="col-sm-10">
						<input type="text"
						       class="form-control"
						       id="questionTextPanel"
						       disabled>
					</div>
				</div>
				<div class="form-group row">
					<label for="question"
					       class="col-sm-2 col-form-label">Answer:
					</label>
					<div id="answersPanel"
					     class="col-sm-10">
					</div>
				</div>

			</div>
			<div class="modal-footer">
				<button type="button"
				        class="btn btn-secondary"
				        onclick="resetModal()"
				        data-dismiss="modal">Cancel
				</button>
				<button type="button"
				        onclick="answerQuestion()"
				        class="btn btn-primary">Answer
				</button>
			</div>
		</div>
	</div>
</div>

<script>
	function resetModal() {
    $("#invalidFormMsg")[0].style = "display:none;"
  }


  function answerQuestion() {
    let answerText;
    if (questionToAnswer.type_id == 4)
      answerText = $("#answerText")[0].value.trim();
    else answerText = $('input[name=option]:checked').val();
    let validForm = answerText !== undefined && answerText !== '';
    if (!validForm) {
      $("#invalidFormMsg")[0].style = "display:block; color: red; padding-bottom:20px";
      return false;
    } else {
      $("#invalidFormMsg")[0].style = "display:none;"
    }

    let answer = {
      questionId: questionToAnswer.id,
      employeeId: 20,
      text: answerText
    }

    axios.post('/api/answer/', answer)
        .then(response => {
          console.log(response);
          $("#activeQuestionsTable").load(" #activeQuestionsTable", () => {
            $("#activeQuestionsTable").children().unwrap();
          });
          $('#answerModal').modal('hide');
        })
        .catch(err => {
          console.log(err);
        });
  }

  function validateFields() {
    let answer = $("#answersPanel textarea")[0].value;
    validForm = answer.value === '';
    if (!validForm) {
      $("#invalidFormMsg")[0].style = "display:block; color: red; padding-bottom:20px";
      return false;
    } else {
      $("#invalidFormMsg")[0].style = "display:none;"
    }
  }

</script>


