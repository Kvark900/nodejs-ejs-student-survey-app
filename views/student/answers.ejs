<!DOCTYPE html>
<html>
	<head>
		<% include ../partials/head.ejs %>
	</head>
	<body>
		<header>
			<% include ../partials/header.ejs %>
		</header>

		<style>

		</style>
		<div id="content"
		     style="display: flex; flex-direction: column; align-items: center;">
			<ul id=""
			    class="nav nav-tabs">
				<li class="nav-item">
					<a class="nav-link active student-nav-item"
					   href="/student/answers">Answers
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link  student-nav-item"
					   href="/student/questions">Questions
					</a>
				</li>
			</ul>
			<div id="studentAnswersPanel">
				<table>
					<thead>
						<tr>
							<th>Date</th>
							<th>Question</th>
							<th>Answer</th>
						</tr>
					</thead>
					<% for (let i = 0; i < answers.length; i++){ %>
						<tr>
							<td><%= moment(answers[i].date_of_answer).format('DD.MM.YYYY h:mm:ss')%></td>
							<td><%= answers[i].question %></td>
							<td><%= answers[i].answer %></td>
						</tr>
					<% } %>
				</table>
			</div>
		</div>
		<% include ../partials/scripts.ejs %>
	</body>
</html>
